generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(cuid())
  name          String
  email         String   @unique
  passwordHash  String
  createdAt     DateTime @default(now())

  preference    Preference?

  votes         Vote[]

  dailyInsights DailyInsight[]
}

model Preference {
  id     String @id @default(cuid())
  userId String @unique
  user   User   @relation(fields: [userId], references: [id])

  assets       String // store JSON string: ["bitcoin","ethereum"]
  investorType String // e.g. "HODLer", "Day Trader"
  contentTypes String // store JSON string: ["news","prices","memes"]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum DashboardSection {
  NEWS
  PRICES
  INSIGHT
  MEME
}

model Vote {
  id     String @id @default(cuid())
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  section DashboardSection
  itemId  String // identifies the item inside the section (e.g., news post id, coin id, "daily-insight-2025-12-16", meme id)
  value   Int // +1 = upvote, -1 = downvote

  createdAt DateTime @default(now())

  @@unique([userId, section, itemId]) // prevents duplicate votes for same item by same user
  @@index([section, itemId])
}

model DailyInsight {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  date      String   // "YYYY-MM-DD"
  text      String

  createdAt DateTime @default(now())

  @@unique([userId, date])
  @@index([date])
}
